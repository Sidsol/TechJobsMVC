<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                @if (ViewBag.searchType == null)
                {
                    <input type="radio"
                           name="searchType"
                           id="@column.Key"
                           value="@column.Key"
                           checked="checked" />
                    <label for="@column.Key">@column.Value</label>
                }
                else if (column.Key == ViewBag.searchType)
                {
                    <input type="radio"
                           name="searchType"
                           id="@column.Key"
                           value="@column.Key"
                           checked="checked" />
                    <label for="@column.Key">@column.Value</label>
                }
                else
                {
                    <input type="radio"
                           name="searchType"
                           id="@column.Key"
                           value="@column.Key" />
                    <label for="@column.Key">@column.Value</label>
                }
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields
    @await Html.PartialAsync("/Views/Shared/_JobPostings.cshtml")
}